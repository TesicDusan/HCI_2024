<UserControl x:Class="HCI_2024.Views.Dialogs.ReceiptsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI_2024.Views.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             Background="{DynamicResource PrimaryBrush}">
    <StackPanel Margin="20">
        <!--Message-->
        <TextBlock Text="{Binding Source={StaticResource Loc}, Path=[Receipts]}"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"
                   Foreground="{DynamicResource TextBrush}"/>
        <!--Date selection-->
        <DatePicker Width="200"
                    x:Name="DateInput"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 10"
                    SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                    Foreground="{DynamicResource SecondaryBrush}"
                    Background="{DynamicResource BackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    materialDesign:HintAssist.Hint="{Binding Source={StaticResource Loc}, Path=[SelectDate]}"/>
        <!--List of receipts-->
        <ListBox Width="400"
                 Height="270"
                 ItemsSource="{Binding Receipts}"
                 SelectedItem="{Binding SelectedReceipt, Mode=TwoWay}"
                 HorizontalAlignment="Center"
                 Foreground="{DynamicResource TextBrush}"
                 Background="{DynamicResource BackgroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                               FontSize="16"
                               Padding="5"
                               Foreground="{DynamicResource TextBrush}"
                               Cursor="Hand"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--Buttons-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="{Binding Source={StaticResource Loc}, Path=[Close]}"
                Command="{Binding CloseCommand}"
                Height="40"
                Padding="10"
                Background="{DynamicResource SecondaryBrush}"
                Foreground="{DynamicResource PrimaryBrush}"
                FontWeight="Bold"
                HorizontalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>
