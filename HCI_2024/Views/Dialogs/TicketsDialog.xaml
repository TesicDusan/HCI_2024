<UserControl x:Class="HCI_2024.Views.Dialogs.TicketsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HCI_2024.Views.Dialogs"
             mc:Ignorable="d"
             Background="{DynamicResource PrimaryBrush}">
    <StackPanel Margin="20" Width="300">
        <TextBlock Text="{Binding Source={StaticResource Loc}, Path=[NumOfTickets]}"
                   FontWeight="Bold" FontSize="16" Margin="0 0 0 10" Foreground="{DynamicResource TextBrush}"/>

        <!-- NumericUpDown for ticket quantity -->
        <materialDesign:NumericUpDown Value="{Binding TicketQuantity, Mode=TwoWay}"
                                      Minimum="1"
                                      Maximum="50"
                                      FontSize="16"
                                      Margin="0 0 0 20"
                                      Foreground="{DynamicResource TextBrush}"/>
        
        <!--Screen-->
        <TextBlock Text="{Binding Source={StaticResource Loc}, Path=[Screen]}"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   Foreground="Gray"
                   Margin="0 0 0 10"/>

        <!--Available seats-->
        <ItemsControl ItemsSource="{Binding Seats}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding DataContext.ToggleSeatCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="4">
                        <materialDesign:PackIcon Width="32" Height="32">
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Setter Property="Kind" Value="Seat"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="Foreground" Value="#e5e5e5"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                            <Setter Property="Foreground" Value="#14231d"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!--Confirm button-->
        <Button Content="{Binding Source={StaticResource Loc}, Path=[Confirm]}"
                Command="{Binding ConfirmCommand}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Margin="0 20 0 0"
                Background="{DynamicResource SecondaryBrush}"
                Foreground="{DynamicResource PrimaryBrush}"/>
    </StackPanel>
</UserControl>
