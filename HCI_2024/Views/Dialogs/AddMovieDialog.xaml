<UserControl x:Class="HCI_2024.Views.Dialogs.AddMovieDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI_2024.Views.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource PrimaryBrush}">
    <StackPanel Margin="20">
        <!--Message-->
        <TextBlock Text="{Binding Source={StaticResource Loc}, Path=[AddMovie]}"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"
                   Foreground="{DynamicResource TextBrush}"/>
        <!--Name-->
        <TextBox Width="200"
                 x:Name="NameInput"
                 HorizontalAlignment="Center"
                 Margin="0 0 0 10"
                 Text="{Binding Name, Mode=TwoWay}"
                 materialDesign:HintAssist.Hint="{Binding Source={StaticResource Loc}, Path=[MovieName]}"
                 Foreground="{DynamicResource TextBrush}"
                 Background="{DynamicResource BackgroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"/>
        <!--Poster Url-->
        <TextBox Width="200"
                 x:Name="PosterUrlInput"
                 HorizontalAlignment="Center"
                 Margin="0 0 0 10"
                 Text="{Binding PosterUrl, Mode=TwoWay}"
                 materialDesign:HintAssist.Hint="{Binding Source={StaticResource Loc}, Path=[PosterUrl]}"
                 Foreground="{DynamicResource TextBrush}"
                 Background="{DynamicResource BackgroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"/>
        <!--Buttons-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="{Binding Source={StaticResource Loc}, Path=[Confirm]}"
                Command="{Binding AddMovieCommand}"
                Height="40"
                Padding="10"
                Margin="0 0 10 0"
                Background="{DynamicResource SecondaryBrush}"
                Foreground="{DynamicResource PrimaryBrush}"
                FontWeight="Bold"
                HorizontalAlignment="Center"/>
            <Button Content="{Binding Source={StaticResource Loc}, Path=[Cancel]}"
                Command="{Binding CancelCommand}"
                Height="40"
                Padding="10"
                Margin="10 0 0 0"
                Background="{DynamicResource SecondaryBrush}"
                Foreground="{DynamicResource PrimaryBrush}"
                FontWeight="Bold"
                HorizontalAlignment="Center"/>
        </StackPanel>
        <!--Snackbar-->
        <materialDesign:Snackbar Margin="0,20,0,0"
                                 MessageQueue="{Binding SnackbarMessageQueue}"
                                 HorizontalAlignment="Center"
                                 Background="{DynamicResource SecondaryBrush}"
                                 Foreground="{DynamicResource PrimaryBrush}"/>
    </StackPanel>
</UserControl>
