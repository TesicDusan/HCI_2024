<UserControl x:Class="HCI_2024.Views.Dialogs.DatePickerDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI_2024.Views.Dialogs"
             mc:Ignorable="d" 
             Width="300" Height="200"
             Background="{DynamicResource PrimaryBrush}">
    <StackPanel Margin="20">
        <TextBlock Text="{Binding Source={StaticResource Loc}, Path=[SelectDate]}"
                   FontWeight="Bold" FontSize="16" Margin="0 0 0 10" Foreground="{DynamicResource TextBrush}"/>
        <!-- DatePicker -->
        <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                    FontSize="16"
                    Foreground="{DynamicResource SecondaryBrush}"/>
        <!-- Confirm Button -->
        <Button Content="{Binding Source={StaticResource Loc}, Path=[Confirm]}"
                Command="{Binding ConfirmCommand}"
                Margin="0 20 0 0"
                Height="40"
                Padding="10"
                Background="{DynamicResource SecondaryBrush}"
                Foreground="{DynamicResource PrimaryBrush}"
                FontWeight="Bold"
                HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
