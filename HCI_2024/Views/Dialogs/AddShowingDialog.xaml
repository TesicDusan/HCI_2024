<UserControl x:Class="HCI_2024.Views.Dialogs.AddShowingDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI_2024.Views.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource PrimaryBrush}">
    <StackPanel Margin="20">
        <!--Message-->
        <TextBlock Text="{Binding Source={StaticResource Loc}, Path=[AddShowing]}"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"
                   Foreground="{DynamicResource TextBrush}"/>
        <!--Movie selection-->
        <ComboBox Width="200"
                  x:Name="MovieInput"
                  HorizontalAlignment="Center"
                  Margin="0 0 0 10"
                  ItemsSource="{Binding Movies}"
                  SelectedItem="{Binding MovieTitle, Mode=TwoWay}"
                  Foreground="{DynamicResource SecondaryBrush}"
                  Background="{DynamicResource PrimaryBrush}"
                  BorderBrush="{DynamicResource BorderBrush}"
                  materialDesign:HintAssist.Hint="{Binding Source={StaticResource Loc}, Path=[SelectMovie]}"/>
        <!--Date and time selection-->
        <DatePicker Width="200"
                    x:Name="DateInput"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 10"
                    SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                    Foreground="{DynamicResource SecondaryBrush}"
                    Background="{DynamicResource BackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    materialDesign:HintAssist.Hint="{Binding Source={StaticResource Loc}, Path=[SelectDate]}"/>
        <materialDesign:TimePicker Width="200"
                                 x:Name="TimeInput"
                                 HorizontalAlignment="Center"
                                 Margin="0 0 0 20"
                                 SelectedTime="{Binding SelectedTime, Mode=TwoWay}"
                                 Foreground="{DynamicResource TextBrush}"
                                 Background="{DynamicResource BackgroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 materialDesign:HintAssist.Hint="{Binding Source={StaticResource Loc}, Path=[SelectTime]}"/>
        <!--Price-->
        <TextBox Width="200"
                 x:Name="PriceInput"
                 HorizontalAlignment="Center"
                 Margin="0 0 0 20"
                 Text="{Binding Price, Mode=TwoWay}"
                 materialDesign:HintAssist.Hint="{Binding Source={StaticResource Loc}, Path=[Price]}"
                 Foreground="{DynamicResource TextBrush}"
                 Background="{DynamicResource BackgroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"/>
        <!--Buttons-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="{Binding Source={StaticResource Loc}, Path=[Confirm]}"
                Command="{Binding AddShowingCommand}"
                Height="40"
                Padding="10"
                Margin="0 0 10 0"
                Background="{DynamicResource SecondaryBrush}"
                Foreground="{DynamicResource PrimaryBrush}"
                FontWeight="Bold"
                HorizontalAlignment="Center"/>
            <Button Content="{Binding Source={StaticResource Loc}, Path=[Cancel]}"
                Command="{Binding CancelCommand}"
                Height="40"
                Padding="10"
                Margin="10 0 0 0"
                Background="{DynamicResource SecondaryBrush}"
                Foreground="{DynamicResource PrimaryBrush}"
                FontWeight="Bold"
                HorizontalAlignment="Center"/>
        </StackPanel>
        <!--Snackbar-->
        <materialDesign:Snackbar Margin="0,20,0,0"
                     MessageQueue="{Binding SnackbarMessageQueue}"
                     HorizontalAlignment="Center"
                     Background="{DynamicResource SecondaryBrush}"
                     Foreground="{DynamicResource PrimaryBrush}"/>
    </StackPanel>
</UserControl>
