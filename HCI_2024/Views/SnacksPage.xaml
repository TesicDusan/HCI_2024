<Page x:Class="HCI_2024.Views.SnacksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_2024.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SnacksPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding Snacks}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card Margin="10" Padding="0" Background="{DynamicResource PrimaryBrush}">
                        <Button Command="{Binding DataContext.AddSnackCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Background="Transparent"
                                BorderThickness="0"
                                Height="200"
                                Width="150"
                                Padding="0">
                            <StackPanel>
                                <!--Snack Image-->
                                <Image Source="{Binding PictureUrl}" Height="100" Width="100" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                <!--Snack Name-->
                                <TextBlock Text="{Binding ItemName}" FontWeight="Bold" FontSize="16" TextAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                                <!--Price-->
                                <TextBlock Text="{Binding Price, StringFormat='Price: {0:C}'}"
                                           Foreground="{DynamicResource TextBrush}" FontSize="14" TextAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </materialDesign:Card>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Page>
