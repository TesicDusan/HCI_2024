<Page x:Class="HCI_2024.Views.MoviesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_2024.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MoviesPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
            <!--Date button-->
            <Button Grid.Row="0"
                Width="50"
                Height="50"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="10"
                Background="Transparent"
                BorderBrush="Transparent"
                ToolTip="{Binding Source={StaticResource Loc}, Path=[SelectDate]}"
                Command="{Binding DataContext.SelectDateCommand, RelativeSource={RelativeSource AncestorType=Page}}">
                <materialDesign:PackIcon Kind="Calendar"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     Foreground="#fca311" />
            </Button>
            <!-- Movie Listings -->
            <ScrollViewer Grid.Row="1"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Showings}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="10" Padding="0" Background="{DynamicResource PrimaryBrush}">
                                <Button Command="{Binding DataContext.AddTicketCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="Transparent"
                            BorderThickness="0"
                            Height="200"
                            Width="150"
                            Padding="0">
                                    <StackPanel>
                                        <!--Movie Poster-->
                                        <Image Source="{Binding PosterUrl}" Height="100" Width="100" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                        <!--Movie Title-->
                                        <TextBlock Text="{Binding MovieName}" FontWeight="Bold" FontSize="16" TextAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                                        <!--Start Time-->
                                        <TextBlock Text="{Binding StartTime, StringFormat='Starts at: {0:HH:mm}'}"
                                       Foreground="{DynamicResource TextBrush}" FontSize="14" TextAlignment="Center"/>
                                        <!--Occupancy Progress Bar-->
                                        <Grid>
                                            <ProgressBar Value="{Binding OccupancyRate}"
                                                 Maximum="1" Height="22"
                                                 VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding OccupancyRate, StringFormat={}{0:P0}}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextBrush}"/>
                                        </Grid>
                                    </StackPanel>
                                </Button>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
</Page>
