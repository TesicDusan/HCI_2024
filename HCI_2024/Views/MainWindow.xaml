<Window x:Class="HCI_2024.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HCI_2024"
        Height="645" 
        Width="875"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        FontSize="18"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid Margin="20">
            <Grid.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="30" Opacity="0.4"/>
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.22*"/>
            </Grid.ColumnDefinitions>

            <!--Left side-->
            <Border Background="#fca311"
                CornerRadius="10 0 0 10"
                ClipToBounds="True">
                <Border.Clip>
                    <RectangleGeometry Rect="0,0,400,605"
                                   RadiusX="10"
                                   RadiusY="10"/>
                </Border.Clip>


                <Image Source="/Resources/Images/logo.png"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Width="300"
                   Height="300"
                   />

            </Border>
            <!--Right side-->
            <Border Grid.Column="1"
                Background="#ffffff"
                CornerRadius="0 10 10 0"
                MouseDown="Border_MouseDown">

                <Grid>
                    <!--Language selector-->
                    <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Top">
                        <ComboBox Width="40"
                                  Height="30"
                                  SelectedValuePath="Tag"
                                  SelectionChanged="LanguageSelectionChanged">
                            <ComboBoxItem Tag="en" IsSelected="True">
                                <Image Source="/Resources/Images/en.png" Width="24" Height="24" ToolTip="English"/>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="sr">
                                <Image Source="/Resources/Images/sr.png" Width="24" Height="24" ToolTip="Srpski"/>
                            </ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <!--Close icon-->
                    <Button Width="40" 
                        Height="40" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="0 14 14 0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        ToolTip="{Binding Source={StaticResource Loc}, Path=[Close]}"
                        Command="{Binding ExitCommand}">
                        <materialDesign:PackIcon Kind="Close" 
                                             Width="24" 
                                             Height="24" 
                                             Foreground="#fca311" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center"/>
                    </Button>
                    <!--Inputs-->
                    <StackPanel VerticalAlignment="Center"
                            Margin="75 0">

                        <TextBox Name="txtUserID"
                             Width="200"
                             Height="50"
                             FontSize="18"
                             MaxLength="4"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             TextAlignment="Center"
                             PreviewTextInput="NumericInput"
                             TextChanged="UserId_TextChanged"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="{Binding Source={StaticResource Loc}, Path=[UserId]}"
                             Foreground="#14231d"
                             BorderBrush="#e5e5e5"
                             BorderThickness="0 0 0 1.5"
                             />

                        <PasswordBox Name="txtPin"
                                 Width="200"
                                 Height="50"
                                 FontSize="18"
                                 MaxLength="4"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Grid.Row="1"
                                 PreviewTextInput="NumericInput"
                                 PasswordChanged="Pin_TextChanged"
                                 materialDesign:HintAssist.Hint="{Binding Source={StaticResource Loc}, Path=[Pin]}"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 Foreground="#14231d"
                                 BorderBrush="#e5e5e5"
                                 Margin="0 27"
                                 BorderThickness="0 0 0 1.5"/>

                        <UniformGrid Grid.Row="2" Rows="4" Columns="3" HorizontalAlignment="Center" Margin="10">
                            <Button Content="1" Click="Keypad_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5"/>
                            <Button Content="2" Click="Keypad_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5"/>
                            <Button Content="3" Click="Keypad_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5"/>
                            <Button Content="4" Click="Keypad_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5"/>
                            <Button Content="5" Click="Keypad_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5"/>
                            <Button Content="6" Click="Keypad_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5"/>
                            <Button Content="7" Click="Keypad_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5"/>
                            <Button Content="8" Click="Keypad_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5"/>
                            <Button Content="9" Click="Keypad_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5"/>
                            <Button Click="Backspace_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5">
                                <materialDesign:PackIcon Kind="Backspace" Width="24" Height="24"/>
                            </Button>
                            <Button Content="0" Click="Keypad_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5"/>
                            <Button Content="OK" Command="{Binding LoginCommand}" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="#fca311" Foreground="#14231d" Margin="5"/>
                        </UniformGrid>
                    </StackPanel>
                    <materialDesign:Snackbar x:Name="SnackbarMessage" 
                                         MessageQueue="{Binding MessageQueue}"
                                         VerticalAlignment="Bottom"
                                         HorizontalAlignment="Center"
                                         Background="#fca311"
                                         Foreground="#14231d"/>
                </Grid>
            </Border>
        </Grid>
    </materialDesign:DialogHost>
</Window>
